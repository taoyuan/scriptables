  "keywords": [
    "scriptable",
    "scriptables",
    "smeta",
    "generator",
    "banner"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=16"
  },
  "author": "TY",
  "license": "Apache-2.0",
